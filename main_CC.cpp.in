#include <iostream>
#include <fstream>
#include <list>
#include "@CC@.h"

int main(int argc, char *argv[]) {
    std::ifstream in(argv[1]);
#ifndef DIRECTED
    Graph G(in);
#else
    Digraph G(in);
#endif
    @CC@ cc{G};
    int M = cc.count();
    std::cout << M << " components" << std::endl;
    std::list<int> components[M];
    for (int v = 0; v < G.V(); ++v) components[cc.id(v)].push_front(v);
    for (int i = 0; i < M; ++i) {
        for (int v: components[i]) std::cout << v << " ";
        std::cout << std::endl;
    }
    return 0;
}
