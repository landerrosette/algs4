/******************************************************************************
 *  % ./@SUBSTR_SEARCHER@ AACAA AABRAACADABRAACAADABRA
 *  text:    AABRAACADABRAACAADABRA
 *  pattern:             AACAA
 *
 ******************************************************************************/

#include "algs4/@SUBSTR_SEARCHER@.hpp"

#include <iostream>
#include <string>

int main(int argc, char *argv[]) {
    if (argc < 3) {
        std::cerr << "Not enough arguments" << std::endl;
        return 1;
    }
    std::string pat = argv[1], txt = argv[2];
    algs4::@SUBSTR_SEARCHER@ search(pat);
    std::cout << "text:    " << txt << std::endl;
    auto offset = search.search(txt);
    std::cout << "pattern: ";
    for (decltype(offset) i = 0; i < offset; ++i) std::cout << " ";
    std::cout << pat << std::endl;
}
