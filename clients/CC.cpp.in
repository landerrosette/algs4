/******************************************************************************
 *  % ./CC tinyG.txt
 *  3 components
 *  6 5 4 3 2 1 0
 *  8 7
 *  12 11 10 9
 *
 *  % ./KosarajuSCC tinyDG.txt
 *  5 components
 *  1
 *  5 4 3 2 0
 *  12 11 10 9
 *  8 6
 *  7
 *
 ******************************************************************************/


#include "algs4/@CC@.hpp"

#include <algorithm>
#include <fstream>
#include <iostream>
#include <vector>

int main(int argc, char *argv[]) {
    if (argc < 2) {
        std::cerr << "Not enough arguments" << std::endl;
        return 1;
    }
    std::ifstream in(argv[1]);
    if (!in.is_open()) {
        std::cerr << "Cannot open file: " << argv[1] << std::endl;
        return 1;
    }
#ifndef DIRECTED
    algs4::Graph G(in);
#else
    algs4::Digraph G(in);
#endif
    algs4::@CC@ cc(G);
    int M = cc.count();
    std::cout << M << " components" << std::endl;
    std::vector<std::vector<int>> components(M);
    for (int v = 0; v < G.V(); ++v)
        components[cc.id(v)].push_back(v);
    for (int i = 0; i < M; ++i) {
        std::ranges::reverse(components[i]);
        for (int v: components[i])
            std::cout << v << " ";
        std::cout << std::endl;
    }
    return 0;
}
