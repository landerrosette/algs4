/******************************************************************************
 *  % ./Huffman - < abra.txt | ./BinaryDump 60
 *  010100000100101000100010010000110100001101010100101010000100
 *  000000000000000000000000000110001111100101101000111110010100
 *  120 bits
 *
 *  % ./@COMPRESSOR@ - < abra.txt | ./@COMPRESSOR@ +
 *  ABRACADABRA!
 *
 *  % ./@COMPRESSOR@ - < abraLZW.txt | ./@COMPRESSOR@ +
 *  ABRACADABRABRABRA
 *
 ******************************************************************************/

#include "algs4/@COMPRESSOR@.hpp"

int main(int argc, char *argv[]) {
    if (argc < 2) {
        std::cerr << "Not enough arguments" << std::endl;
        return 1;
    }
    if (*argv[1] == '-') algs4::@COMPRESSOR@::compress();
    else if (*argv[1] == '+') algs4::@COMPRESSOR@::expand();
    else {
        std::cerr << "Illegal command line argument" << std::endl;
        return 1;
    }
    return 0;
}
